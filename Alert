"""
Alert Consumer - Milestone 2
Consumes alerts from Kafka topic: weather.alerts and prints them
"""

import json
from kafka import KafkaConsumer

ALERTS_TOPIC = "weather.alerts"
BOOTSTRAP_SERVERS = ["localhost:9092"]

def create_consumer():
    return KafkaConsumer(
        ALERTS_TOPIC,
        bootstrap_servers=BOOTSTRAP_SERVERS,
        auto_offset_reset="earliest",
        enable_auto_commit=True,
        group_id="alert-consumer-group",
        value_deserializer=lambda v: json.loads(v.decode("utf-8")),
    )

if __name__ == "__main__":
    consumer = create_consumer()

    print(f"ğŸš¨ Listening for emergency alerts on {ALERTS_TOPIC}...")
    for message in consumer:
        alert = message.value
        print(f"\nğŸš¨ EMERGENCY ALERT ğŸš¨")
        print(f"ğŸ“ Station: {alert['station_id']} ({alert['location']})")
        print(f"âš ï¸  Type: {alert['alert']}")
        print(f"ğŸŒ¤ï¸  Reading: {alert['reading']}")
        print("-" * 50)
